            <div class="grid grid-cols-3 gap-4">
                <fieldset>
                    <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Basic Information</legend>
                    <div class="grid">
                        <div class="mb-3">
                            <label class="text-sm">Email:</label>
                            <p class="font-semibold"><%= data.email %></p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="text-sm">Phone:</label>
                            <p class="font-semibold"><%= data.phone %> </p>
                        </div>

                        <div class="mb-3">
                          <label class="text-sm">Mobile:</label>
                          <p class="font-semibold"><%= data.mobile %></p>
                      </div>
                        
                        <div class="mb-3">
                            <label class="text-sm">Address:</label>
                            <p class="font-semibold"><%= data.address %></p> 
                        </div>
                        
                    </div>
                </fieldset> 
                <fieldset>
                  <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Additional Information</legend>
                  <div class="grid">
                      <div class="mb-3">
                        <label class="text-sm">Reports To:</label>
                        <p class="font-semibold"><%= data.reports_to %></p> 
                    </div>
                    <div class="mb-3">
                      <label class="text-sm">Status:</label>
                      <p class="font-semibold text-green-500">Active</p> 
                  </div>
                      
                  </div>
                </fieldset> 

                <fieldset>
                    <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Agent Codes</legend>
                        <div class="mb-3">
                            <label class="text-sm">TSYS:</label>
                            <p class="font-semibold"><%= data.codes.TSYS %></p>
                        </div>
                        
                        <div class="mb-3">
                        <label class="text-sm">TriSource:</label>
                            <p class="font-semibold"><%= data.codes.TriSource %></p> 
                        </div>     
                </fieldset> 
            </div>
            <a href="/agent/edit/<%= data.agent_id %>" class="text-sm mt-5 w-32 focus:outline-none flex justify-center px-4 py-2 rounded font-bold cursor-pointer 
            hover:bg-blue-700 hover:text-blue-100 
            bg-blue-100 
            text-blue-700 
            border duration-400 ease-in-out 
            border-blue-600 transition "> Edit</a>   
        </div>
    </div>
    <div class="container mx-auto mt-7">

    <script>
       $('ul.tabs li').click(function(){
       if(!$(this).hasClass("active")){
                 $(".active").removeClass("active").addClass("text-gray-500 bg-gray-200");
                 $(this).addClass("active").removeClass("text-gray-500 bg-gray-200");
        }else{
            return false;//this prevents flicker
       }
    });
    </script>


    
