<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/7d89c1ce52.js" crossorigin="anonymous"></script>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <title>Document</title>
    
</head>
    <body>
      <%- include('../partials/navbar') %>
        <div class="backg"></div>
        <div class="container mx-auto pt-5">
            <nav class="rounded font-sans w-full my-4 text-white">
                <ol class="list-reset flex text-grey-dark">
                    <li><a href="/commission" class="text-blue font-bold">Commission</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li><a href="/commission/<%= data.commission_code %>" class="font-bold"><%= data.commission_code %></a></li>
                    <li><span class="mx-2">/</span></li>
                    <li>Edit</li>  
                </ol>
            </nav>
        </div> 
        <div class="container mx-auto pt-5">
          <p class="text-5xl text-white"><strong>Commission Code: <%= data.commission_code %></strong></p>
            <section>
              <h2 class="font-medium mt-7 mb-3">Details</h2>
              <div id="details" class="bg-gray-100 py-3 px-3 border-l-2 border-blue-600">
                <!-- <p class="text-3xl mb-5 font-medium inline-block ">Wesley Cenatus </p> <div class="simpleCircle inline-block"><a href='./commission.html'><i class="fa fa-dollar-sign"></i></a></div> -->
                <div class="grid grid-cols-3 gap-4">
                    <fieldset>
                        <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Basic Information</legend>
                        <div class="grid">
                            <div class="mb-3">
                                <label class="text-sm">Commission Code:</label>
                                <input class="form-input mt-1 block bg-gray-100 w-9 border-b-2 border-gray-500" placeholder="Enter Commission Code" value="<%= data.commission_code %>">
                            </div>
                            
                            <div class="mb-3">
                                <label class="text-sm">Platform:</label>
                                <input class="form-input mt-1 block bg-gray-100 w-9 border-b-2 border-gray-500" placeholder="Enter Platform" value="<%= data.platform %>">
                            </div>
    
                            <div class="mb-3">
                              <label class="text-sm">Profit Manager:</label>
                              <input class="form-input mt-1 block bg-gray-100 w-9 border-b-2 border-gray-500" placeholder="Enter Profit Manager" value="<%= data.agents[1].name %>">
                          </div>
                        </div>
                    </fieldset> 
                    <fieldset>
                      <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Additional Information</legend>
                      <div class="grid">
                          <div class="mb-3">
                            <label class="text-sm">Commission Name:</label>
                            <input class="form-input mt-1 block bg-gray-100 w-9 border-b-2 border-gray-500" placeholder="Enter Commission Name" value="<%= data.commission_name[0] + ', ' + data.commission_name[1] %>">
                        </div>
                        <div class="mb-3">
                          <label class="text-sm">Commission Translation:</label>
                          <input class="form-input mt-1 block bg-gray-100 w-9 border-b-2 border-gray-500" placeholder="Enter Profit Manager" value="<%= agents[0].name + ', ' +agents[1].name %>">
                        </div>
                        <div class="mb-3">
                         
                          <label class="text-sm">Status:</label>
                          <br/>
                          <input id="active" type="radio" name="status">
                          Active 
                          <input id="inactive" type="radio" name="status" class="ml-2">
                          Inactive
                          
                          <!-- <p class="font-semibold text-green-500">Active</p>  -->
                        </div>
                          
                      </div>
                    </fieldset> 
                </div>
                 
            </div>
            </section>
            <section>
            
            <h2 class="font-medium mt-6 mb-3">Agents</h2>
              <div class=" grid grid-cols-4">
                <%  for(var i =0; i < agents.length; i++){ %>
                <div class="max-w-sm rounded overflow-hidden shadow-md mr-5">
                  <div class="bg-blue-100 w-full h-2"></div>
                  <div></div>
                    <div class="px-6 py-4">
                      <a href="#"><i class="far fa-trash-alt text-red-700 float-right"></i></a>
                      <div class="font-bold text-xl mb-2">Agent <%= i + 1 %></div>
                      <input class="form-input mt-1 block bg-white w-9 border-b-2 border-gray-500 mb-3" placeholder="Enter Platform" value="<%= agents[i].name %>">
                      <!-- <hr class="my-3"/> -->
                      <p class="uppercase text-xs font-semibold text-gray-500">Rate:</p>
                      <input class="form-input mt-1 block bg-white w-9 border-b-2 border-gray-500" placeholder="Enter Platform" value="<%= agents[i].rate %>">
                    </div>
                  
                </div>
                <% } %>  
                
                <div class="max-w-sm rounded overflow-hidden shadow-md">
                  <div class="bg-blue-100 w-full h-2"></div>
                  <div></div>
                  <div class="px-6 py-4">
                    <div class="text-center bg-gray-50 text-sm text-blue-600"><a href="#" class=""><i class="fas fa-plus-circle "></i> Add Agent and rate</a></div>
                  </div>
                </div>
              </div>
            </section>
            <a href="/commission/<%= data.commission_code %>" class="text-sm mt-5 w-32 focus:outline-none flex justify-center px-4 py-2 rounded font-bold cursor-pointer 
              hover:bg-blue-700 hover:text-blue-100 
              bg-blue-100 
              text-blue-700 
              border duration-400 ease-in-out 
              border-blue-600 transition "> Save</a>  
        </div>
    </body>
</html>