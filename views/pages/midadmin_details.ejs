<%- include('../partials/header') %>
<div class="header bg-orange-500">
  <div id="header-container" class="container mx-auto">
    <p class="text-5xl text-white text-bottom"><strong>Commission:
        <%= data.commission_name[0] + ', ' + data.commission_name[1] %></strong></p>
  </div>
</div>
<div class="w-100 h-10 bg-orange-800">
  <div class="container mx-auto">
    <ul class='tabs flex cursor-pointer'>
      <li class='text-white py-2 px-6 active'><a>Details</a></li>
    </ul>
  </div>

</div>

<div class="container mx-auto mt-4 ">
  <section>
    <!-- <a href="/commission/edit/<%= data.commission_code %>"><h2 class="font-medium mb-3">Details <i class="far fa-edit"></i></h2></a> -->
    <!-- <div id="details" class="bg-gray-100 py-3 px-3 border-l-2 border-blue-600"> -->
    <div id="details" class="py-3 px-3">
      <!-- <p class="text-3xl mb-5 font-medium inline-block ">Wesley Cenatus </p> <div class="simpleCircle inline-block"><a href='./commission.html'><i class="fa fa-dollar-sign"></i></a></div> -->
      <div class="grid grid-cols-3 gap-4">
        <fieldset>
          <!-- <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Basic Information</legend> -->
          <div class="grid">
            <div class="mb-3">
              <label class="text-xs uppercase font-semibold text-gray-500">Commission Code:</label>
              <p class="font-semibold text-base"><%= data.commission_code %></p>
            </div>
            <div class="mb-3">
              <label class="text-xs uppercase font-semibold text-gray-500 inline-block">Commission name  
                <p class='tooltip inline-block ml-1'> <i class="fas fa-question-circle"></i> <span class='tooltip-text bg-blue-200 p-3 -mt-6 -ml-6 rounded text-black'><%= data.platform === 'TSYS'? 'TSYS Association Code' : data.platform === 'TriSource' ? 'TriSource Sort Code': null  %></span></p>
              </label>
              <p class="font-semibold text-base"><%= data.commission_name[0] + ', ' + data.commission_name[1] %></p>
            </div>
            <div class="mb-3">
              <label class="text-xs uppercase font-semibold text-gray-500">Commission Translation:</label>
              <p class="font-semibold text-base"><%= agents[0].name + ', ' +agents[1].name  %></p>
            </div>


          </div>
        </fieldset>
        <fieldset>
          <!-- <legend class="uppercase text-xs font-semibold text-gray-500 mb-3">Additional Information</legend> -->
          <div class="grid">
            <div class="mb-3">
              <label class="text-xs uppercase font-semibold text-gray-500">Platform:</label>
              <p class="font-semibold text-base"><%= data.platform %> </p>
            </div>

            <div class="mb-3">
              <label class="text-xs uppercase font-semibold text-gray-500">Profit Manager:</label>
              <p class="font-semibold text-base"><%= data.agents[1].name %></p>
            </div>
            <!-- <div class="mb-3">
              <label class="text-xs uppercase font-semibold text-gray-500">Status:</label>
              <p class="font-semibold text-base text-green-500"><i class="fas fa-circle text-xs align-middle"></i>
                Active</p>
            </div> -->

          </div>
        </fieldset>
      </div>
      <!-- <a href="/commission/edit/<%= data.commission_code %>" class="text-sm mt-5 w-32 focus:outline-none flex justify-center px-4 py-2 rounded font-bold cursor-pointer 
                hover:bg-blue-700 hover:text-blue-100 
                bg-blue-100 
                text-blue-700 
                border duration-400 ease-in-out 
                border-blue-600 transition "> Edit</a>    -->
    </div>
  </section>
  <section>

    <div class="mt-6 grid grid-cols-4">
      <%  for(var i =0; i < agents.length; i++){ %>
      <div class="max-w-sm rounded overflow-hidden shadow mr-5">
        <div class="<%= i === 1? 'bg-blue-400' : agents[i].active == false ? 'bg-gray-200':'bg-green-400' %> w-full h-2"></div>
        <% if(i === 1){ %>
        <span
          class="float-right text-xs font-semibold inline-block mr-3 my-3 py-1 px-2 uppercase rounded text-blue-500 bg-blue-100 uppercase last:mr-0 mr-1">
          Manager
        </span>
        <!-- <i style="opacity: 0.3;" class="fas fa-crown  text-yellow-500 text-4xl px-3 py-3"></i> -->
        <% } %>
        <% if(agents[i].active == false){ %>
          <span
            class="float-right text-xs font-semibold inline-block mr-3 my-3 py-1 px-2 uppercase rounded text-red-500 bg-red-100 uppercase last:mr-0 mr-1">
            <i class="fas fa-ban mr-1"></i>Inactive
          </span>
          <!-- <i style="opacity: 0.3;" class="fas fa-crown  text-yellow-500 text-4xl px-3 py-3"></i> -->
        <% } %>
        <div></div>
        <div class="px-6 py-3">
          <div class="font-bold text-xl mb-2">Agent <%= i + 1 %></div>
          <p class="uppercase text-xs font-semibold text-gray-500">Name:</p>
          <p class="font-medium mb-3"><%= agents[i].name %></p>
          <!-- <hr class="my-3"/> -->
          <p class="uppercase text-xs font-semibold text-gray-500">Rate:</p>
          <p class="font-medium"><%= agents[i].rate %></p>
        </div>

      </div>
      <% } %>

    </div>
    <a href="/commission/edit/<%= data.commission_code %>" class="text-sm mt-5 w-32 focus:outline-none flex justify-center px-4 py-2 rounded font-bold cursor-pointer 
                hover:bg-blue-700 hover:text-blue-100 
                bg-blue-100 
                text-blue-700 
                border duration-400 ease-in-out 
                border-blue-600 transition "> Edit</a>
  </section>
</div>
<%- include('../partials/footer') %>